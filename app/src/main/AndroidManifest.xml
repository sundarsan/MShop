<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ecom.com.mshop">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UI.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.HomeScreen"
            android:label="@string/title_activity_main_screen"
            android:parentActivityName=".UI.HomeScreen"
            android:theme="@style/AppTheme.NoActionBar">

            <!--
<intent-filter>
    <action android:name="android.intent.action.MAIN"/>
    <category android:name="android.intent.category.LAUNCHER"/>
</intent-filter>
            -->
        </activity>
        <activity
            android:name=".UI.SignUpActivity"
            android:label="@string/title_activity_registration"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.ItemList"
            android:label="@string/title_activity_item_detail"
            android:parentActivityName=".UI.HomeScreen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.CartItems"
            android:label="CartItems"
            android:parentActivityName=".UI.HomeScreen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.ItemDetails"
            android:label="ItemDetails"
            android:parentActivityName=".UI.ItemList"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.UpdateProfile"
            android:label="UpdateUser"
            android:parentActivityName=".UI.HomeScreen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.EmptyCart"
            android:label="ItemDetails"
            android:parentActivityName=".UI.HomeScreen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.CheckOut"
            android:label="CheckOut"
            android:parentActivityName=".UI.HomeScreen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.ProductDetails"
            android:label="ProductDetails"
            android:parentActivityName=".UI.HomeScreen"
            android:theme="@style/AppTheme" />
    </application>

</manifest>